{
  "name": "accesslm",
  "version": "0.0.2",
  "description": "Run LLMs on any device - No cloud. No login. No cost.",
  "main": "electron/main.js",
  "scripts": {
    "dev": "node main.js",
    "dev:next": "cd client && next dev",
    "dev:electron": "cd electron && electron .",
    "p2p:build": "cd backend && cargo build --bin accesslm-p2p",
    "p2p:dev": "cd backend && cargo run --bin accesslm-p2p",
    "bundle:llama-cpp-python:mac": "bash scripts/bundle-llama-cpp-python-macos.sh",
    "build": "cd client && npm run build && node ../scripts/postbuild-copy-assets.js",
    "build:electron": "npm run build && cd electron && npm run build",
    "pack": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "ai",
    "llm",
    "p2p",
    "decentralized",
    "education",
    "huggingface"
  ],
  "author": "AccessLM Contributors",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "electron": "^31.0.0",
    "electron-builder": "^24.13.3",
    "get-port": "^7.1.0"
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.1",
    "next": "^14.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "build": {
    "appId": "com.accesslm.accesslm",
    "productName": "AccessLM",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron/**/*",
      "client/out/**/*",
      "public/**/*",
      "backend/**/*"
    ],
    "asarUnpack": [
      "client/out/**/*"
    ],
    "extraResources": [
      {
        "from": "public/",
        "to": "assets/",
        "filter": ["**/*"]
      },
      {
        "from": "electron/resources/python/",
        "to": "python/",
        "filter": ["**/*"]
      }
    ],
    "mac": {
      "category": "public.app-category.education",
      "icon": "icons/icon.icns",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "zip",
          "arch": ["x64", "arm64"]
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "ia32"]
        },
        {
          "target": "portable",
          "arch": ["x64", "ia32"]
        }
      ],
      "icon": "icons/icon.ico"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        },
        {
          "target": "deb",
          "arch": ["x64"]
        }
      ],
      "icon": "icons/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "AccessLM"
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    }
  }
}
